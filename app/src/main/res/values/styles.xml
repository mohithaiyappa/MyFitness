<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/calypso</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/java</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:timePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
    </style>

    <style name="WeekChildTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/week_view_child_text_size</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="android:Theme.DeviceDefault.Dialog.Alert">
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="android:Theme.DeviceDefault.Dialog.Alert">
        <item name="backgroundColor">?attr/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
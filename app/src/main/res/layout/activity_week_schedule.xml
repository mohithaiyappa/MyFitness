<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    android:padding="7dp"
    tools:context=".WeekSchedule">

    <LinearLayout
        android:id="@+id/noticeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grayColor"
        android:orientation="vertical"
        android:padding="1dp">

        <ScrollView
            android:id="@+id/notificationScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor">

            <TextView
                android:id="@+id/notificationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                android:lineSpacingExtra="2dp"
                android:paddingHorizontal="7dp"
                android:textSize="13sp" />
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor">

        <TextView
            android:id="@+id/titleTextWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/prevButton"
            android:layout_alignBottom="@id/prevButton"
            android:layout_marginHorizontal="7dp"
            android:layout_toEndOf="@id/prevButton"
            android:gravity="center"
            android:text="2018.2"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/prevButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/goToTodayWeek"
            android:gravity="center"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titleTextWeek"
            android:gravity="center"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/goToTodayWeek"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:enabled="true"
            android:gravity="center"
            android:text="今日" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackColor"
        android:padding="1dp">

        <com.alamkanak.weekview.WeekView
            android:id="@+id/weekView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteColor"
            app:columnGap="8dp"
            app:dayBackgroundColor="#05000000"
            app:eventPadding="10dp"
            app:eventTextColor="@android:color/white"
            app:eventTextSize="13sp"
            app:firstDayOfWeek="monday"
            app:headerColumnBackground="#ffffffff"
            app:headerColumnPadding="8dp"
            app:headerColumnTextColor="#8f000000"
            app:headerRowBackgroundColor="#ffefefef"
            app:headerRowPadding="12dp"
            app:horizontalFlingEnabled="true"
            app:hourHeight="240dp"
            app:hourSeparatorColor="@color/blackColor"
            app:hourSeparatorHeight="1dp"
            app:maxHourHeight="960dp"
            app:minHourHeight="30dp"
            app:noOfVisibleDays="7"
            app:nowLineColor="@color/colorAccent"
            app:showDistinctWeekendColor="true"
            app:showNowLine="true"
            app:textSize="16sp"
            app:todayBackgroundColor="#10000000" />
    </LinearLayout>

</LinearLayout>